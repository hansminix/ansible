{# Template voor forward proxy configuraties #}
{# Loop over alle klanten #}
{% for klant in forwardproxy %}
{# Eerst source acl #}
#Configuratie voor {{ klant.naam }}
{% for source in klant.sources %}
acl {{ klant.naam }}_src src {{ source }}
{% endfor %}

{% if 'destinationhosts' in klant %}
{% for source in klant.destinationhosts %}
acl {{ klant.naam }}_dstdomain dstdomain {{ source }}
{% endfor %}
http_access allow {{ klant.naam }}_src {{ klant.naam }}_dstdomain
{% endif %}

{% if 'destinationips' in klant %}
{% for source in klant.destinationips %}
acl {{ klant.naam }}_dstips dst {{ source }}
{% endfor %}
http_access allow {{ klant.naam }}_src {{ klant.naam }}_dstips
{% endif %}

{% if 'destinationurls' in klant %}
{% for source in klant.destinationurls %}
acl {{ klant.naam }}_dsturls  url_regex -i {{ source }}
{% endfor %}
http_access allow {{ klant.naam }}_src {{ klant.naam }}_dsturls
{% endif %}

{% endfor %}

